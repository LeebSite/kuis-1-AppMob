<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F5F5">

    <TextView
        android:id="@+id/tvNamaApp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#124076"
        android:fontFamily="@font/poppins_extrabold"
        android:paddingTop="19dp"
        android:text="Dip Tech Store"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#124076"
        android:fontFamily="@font/poppins_medium"
        android:text="Ghalib Pradipa Quiz 1"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvNamaApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvIntro"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Selamat datang di Dip Tech Store!"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvNamaPembeli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNamaApp" />

    <TextView
        android:id="@+id/tvNamaPembeli"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Nama Pembeli"
        android:paddingLeft="2dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/etNamaPembeli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvIntro"/>

    <EditText
        android:id="@+id/etNamaPembeli"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="8dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Masukkan Nama"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNamaPembeli" />


    <RadioGroup
        android:id="@+id/rbMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@id/rbMember"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNamaPembeli">

        <RadioButton
            android:id="@+id/rbGold"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/rb_gold"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center"
            android:text="Gold"
            android:paddingLeft="-10dp"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rbSilver"
            android:layout_width="81dp"
            android:layout_height="45dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/rb_silver"
            android:fontFamily="@font/poppins_semibold"
            android:text="Silver"
            android:paddingLeft="-10dp"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rbBronze"
            android:layout_width="89dp"
            android:layout_height="45dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rb_bronze"
            android:fontFamily="@font/poppins_semibold"
            android:text="Bronze"
            android:paddingLeft="-10dp"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rbNone"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rb_none"
            android:fontFamily="@font/poppins_semibold"
            android:text="None"
            android:paddingLeft="-9dp"
            android:textSize="15sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/tvKodeBarang"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Kode Barang"
        android:paddingLeft="2dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/etKodeBarang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbMember"/>

    <EditText
        android:id="@+id/etKodeBarang"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="8dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Masukkan Kode Barang"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvJumlahBarang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvKodeBarang" />

    <TextView
        android:id="@+id/tvJumlahBarang"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Jumlah Barang"
        android:paddingLeft="2dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/etJumlahBarang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etKodeBarang"/>

    <EditText
        android:id="@+id/etJumlahBarang"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingBottom="8dp"
        android:hint="Masukkan Jumlah Barang"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvJumlahBarang" />

    <Button
        android:id="@+id/btnProses"
        android:layout_width="147dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="#124076"
        android:fontFamily="@font/poppins_bold"
        android:text="Proses"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/btnReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etJumlahBarang"/>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#6895D2"
        android:text="Reset"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="4dp"
        android:layout_gravity="center"
        android:onClick="resetData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnProses"/>


</androidx.constraintlayout.widget.ConstraintLayout>